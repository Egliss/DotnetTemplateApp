root = true

# special files
[LICENSE]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
[*.{editorconfig,gitignore,csproj,sln}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# data and scripts
[*.{md,sh,xml,pubxml,yaml,yml,json}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# gitkeep
[*.gitkeep]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

[*.{cs,csx}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
